<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table width=100%>
  <tr>
    <td style="width:60%">
      <a href="http://дом.рф/wp-content/uploads/2016/10/anketa_kredit_zaim_dec.pdf" class="btn-link" style="color:blue" target="_new">Версия дом.рф</a>
    </td>
    <td style="width:20%" align="center">
      <% if @process.blank? %>
        <p>По заявке не офорлено кредитное досье</p>
      <% else %>
        <%= link_to "Процесс выдачи №"+@process.id.to_s, @link, class: "btn btn-primary", :data => {:confirm => 'Вы действительно хотите перейти к карточке кредитного досье?'}, :method => 'get' %> 
      <% end %>
    </td>
    <td align="right">
        <input type="checkbox" data-toggle="toggle" data-on="Расширенная" data-off="Короткая" checked="checked" id="formTypeBox" data-width="130">
    </td>
  </tr>     
</table>
  
 
<div class="extended">
  <%= render(:partial => 'requests/part01',:locals => {:f => f}) %>
  <%= render(:partial => 'requests/part02',:locals => {:f => f}) %>
</div>  
  <%= render(:partial => 'requests/part03',:locals => {:f => f}) %>
<div class="extended">  
  <%= render(:partial => 'requests/part04',:locals => {:f => f}) %>
  <%= render(:partial => 'requests/part05',:locals => {:f => f}) %>
  <%= render(:partial => 'requests/part06',:locals => {:f => f}) %>
  <%= render(:partial => 'requests/part07',:locals => {:f => f}) %>
</div>  

  <div class="actions" align = "right" id="requestButtons">
    <%= f.submit "Принять", :class=>"btn btn-success"%> | <%= link_to 'Отмена', requests_path, :class=>'btn btn-default' %>
  </div>
<% end %>
