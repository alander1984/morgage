      	<div class="col-md-3">
          <!-- Извращения с выбором даты, однако -->                
             <div class="form-group">
                <div class='input-group date datepicker' id='datetimepicker3'>
                              <%= text_field('new_person', 'birthday', :class => "form-control", :placeholder => "DD.MM.YYYY", ) %> 
