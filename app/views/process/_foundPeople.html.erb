<h2>2. Выберите заявителя</h2>

<% @foundPeople.each_with_index do |person, index| %>
	<br><input type="radio" name="person" value="<%= person.id.to_s %>" data-radio="radio-person"><%= (index+1).to_s %> <%= person.fname+' '+person.sname+' '+person.tname+' '+person.passserie %>
<% end %>
<script type="text/javascript" language="javascript">
	 $('input:radio[name=person]').change(function() {
        $.ajax({
        type: "GET",
        url: '/process/refreshReqByPers/'+this.value, 
        dataType: "script" 
   		}).success(function(script){
        	console.log("success", script);
  		});
      
    });
</script    