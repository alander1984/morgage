<%= form_for @process do |f| %>
	<h1>Выбор страхования для выбранного продукта/заявки</h1>
	<div class="col-md-5">
		<div class="form-group row">
			<div class="col-md-3"><label>Процент</label></div>
			<div class="col-md-4"><%= f.number_field :percent,  :class=>"form-control"%></div>
		</div>
		<div class="form-group row">
			<div class="col-md-3"><label>Страхование</label></div>
			<div class="col-md-9">
				<%= collection_select(:insurance, :ins_id, Insurance.all, :id, :name, {}, {:class => "form-control", :onclick=>"selProduct()", :id => "insuranceList"}) %>
			</div>
		</div>		
	</div>
	<div class="col-md-7">
		<div class="form-group row">
			<%= render(:partial => 'process/shortProductInfo', :locals => {:p => @process.product}) %>
		</div>
		<div class="form-group row">
			<h4>Выбраны опции:</h4>
			<ul>
				<% @process.options.each do |option| %>
					<li><%= option.name %></li>
				<% end %>	
			</ul>	
		</div>			
	</div>	

	<div class="actions">
    	<%= f.submit %>
  	</div>
<% end %>