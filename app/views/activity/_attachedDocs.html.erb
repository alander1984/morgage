<table class="table">
	<thead>
		<th>#</th>
		<th>Название</th>
		<th>Примечание</th>
		<th style="width:120px"></th>
	</thead>
	<% @process.documents.each_with_index do |doc, index| %>
		<tr>
			<td><%= (index+1).to_s %></td>
			<td><%= doc.name %></td>
			<td><%= doc.note %></td>
			<td><%= link_to  doc.file.url, target: "_blank" do %><i class="btn btn-default glyphicon glyphicon-eye-open"></i><% end %> | <%= link_to "/activity/"+@process.id.to_s+"/removeDoc/"+doc.id.to_s, remote: true do %><i class="btn btn-default glyphicon glyphicon-trash"></i><% end %></td>
		</tr>
	<% end %>
</table>